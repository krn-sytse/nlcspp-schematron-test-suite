{
  "name": "schematron-test-suite",
  "displayName": "schematron test suite",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "schematron-test-suite.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Schematron Validator",
      "properties": {
        "schematron.jarPath": {
          "type": "string",
          "default": "/schxslt-cli.jar",
          "description": "Relative path to the Schematron validator JAR file"
        },
        "schematron.schemaPath": {
          "type": "string",
          "default": "/validation_schemas/nlcs_plus_plus_schema.sch",
          "description": "Relative path to the Schematron .sch schema file"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "fast-xml-parser": "^5.2.5"
  }
}
